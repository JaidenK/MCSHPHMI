<UserControl x:Class="MCSHPHMI_DemoApp.Controls.AlarmTable"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MCSHPHMI_DemoApp.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid x:Name="LayoutRoot">
        <ListView Name="AlarmTableListView" HorizontalAlignment="Left" >
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Source" DisplayMemberBinding="{Binding alarm.sysChan.ID}" Width="60"/>
                    <GridViewColumn Header="Description" DisplayMemberBinding="{Binding alarm}" Width="300"/>
                    <GridViewColumn Header="Time" DisplayMemberBinding="{Binding Time}" Width="200"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>
