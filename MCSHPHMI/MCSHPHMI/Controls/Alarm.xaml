<UserControl x:Class="MCSHPHMI.Controls.Alarm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MCSHPHMI.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="20" 
             Cursor="Hand"
             MouseDown="UserControl_MouseDown"
             Loaded="UserControl_Loaded" 
             Initialized="UserControl_Initialized">
    <Border Background="{StaticResource AlarmRed}" BorderBrush="Black" BorderThickness="1">
        <TextBlock Text="1" TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center"/>
    </Border>
</UserControl>
